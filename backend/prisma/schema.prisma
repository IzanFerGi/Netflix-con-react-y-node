generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  MOVIE
  SERIES
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  name          String?
  createdAt     DateTime  @default(now())
  isVerified    Boolean   @default(false)
  profiles      Profile[]
  sessions      Session[]
  @@index([email])
}

model Profile {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  avatarUrl String?
  favorites Favorite[]
  watchlist WatchHistory[]
  ratings   Rating[]
  @@unique([userId,name])
}

model Session {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  refreshToken String
  userAgent    String?
  ip           String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime
}

model Genre {
  id     Int          @id @default(autoincrement())
  name   String       @unique
  medias MediaGenre[]
}

model Media {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  type        MediaType
  year        Int?
  duration    Int?
  createdAt   DateTime     @default(now())
  slug        String?      @unique
  assets      MediaAsset[]      // inverse relation for MediaAsset.media
  seasons     Season[]
  genres      MediaGenre[]
  favorites   Favorite[]
  ratings     Rating[]
  watchHistory WatchHistory[]   // inverse for WatchHistory.media
  casts       Cast[]            // inverse for Cast.media
  @@index([title])
}

model MediaGenre {
  id       Int   @id @default(autoincrement())
  media    Media @relation(fields: [mediaId], references: [id])
  mediaId  Int
  genre    Genre @relation(fields: [genreId], references: [id])
  genreId  Int

  @@unique([mediaId, genreId])
}

model MediaAsset {
  id        Int    @id @default(autoincrement())
  media     Media? @relation(fields: [mediaId], references: [id])
  mediaId   Int?
  episode   Episode? @relation(fields: [episodeId], references: [id])
  episodeId Int?
  type      String
  url       String
  quality   String?
  language  String?
}

model Season {
  id       Int      @id @default(autoincrement())
  media    Media    @relation(fields: [mediaId], references: [id])
  mediaId  Int
  number   Int
  episodes Episode[]
  @@unique([mediaId, number])
}

model Episode {
  id        Int     @id @default(autoincrement())
  season    Season  @relation(fields: [seasonId], references: [id])
  seasonId  Int
  number    Int
  title     String
  duration  Int?
  assets    MediaAsset[]   // inverse created via MediaAsset.episode
  @@unique([seasonId, number])
}

model Favorite {
  id        Int     @id @default(autoincrement())
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
  media     Media   @relation(fields: [mediaId], references: [id])
  mediaId   Int
  createdAt DateTime @default(now())
  @@unique([profileId, mediaId])
}

model WatchHistory {
  id          Int      @id @default(autoincrement())
  profile     Profile  @relation(fields: [profileId], references: [id])
  profileId   Int
  media       Media    @relation(fields: [mediaId], references: [id])
  mediaId     Int
  episodeId   Int?
  playedAt    DateTime @default(now())
  position    Int      @default(0)
  @@index([profileId, mediaId])
}

model Rating {
  id        Int     @id @default(autoincrement())
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
  media     Media   @relation(fields: [mediaId], references: [id])
  mediaId   Int
  value     Int
  createdAt DateTime @default(now())
  @@unique([profileId, mediaId])
}

model Person {
  id   Int    @id @default(autoincrement())
  name String
  bio  String?
  roles Cast[]
}

model Cast {
  id        Int    @id @default(autoincrement())
  media     Media  @relation(fields: [mediaId], references: [id])
  mediaId   Int
  person    Person @relation(fields: [personId], references: [id])
  personId  Int
  role      String
  character String?
}
